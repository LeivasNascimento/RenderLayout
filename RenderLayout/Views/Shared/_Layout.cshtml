<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*A div que estava aqui foi colocado em outro arquivo csthml*@ 
    
    <div class="container">
        <div class="container body-content">
            @RenderPage("~/Views/Shared/_Topo.cshtml")
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            @if (IsSectionDefined("rodape"))
            {
                @RenderSection("rodape");
            }
            else
            {
                @Html.Partial("_Rodape");
            }
            @*é igual ao RenderPage mas te possibilita trazer parâmetros*@ 
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
